<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="com.hyundai.mapper.ReplyMapper">

	<select id="getList" resultType="com.hyundai.domain.ReplyVO">
       select * 
       from reply 
       where qid=#{qid}
       order by rid ASC 
   </select> 
   
   <insert id="insert" statementType="CALLABLE">
   	{
   		CALL sp_qna_insert(
   			#{mid},
   			#{qid},
   			#{rcontent}
   		)
   	
   	}
   
   </insert>

   <delete id="delete" statementType="CALLABLE">
   {
   		CALL sp_qna_delete(#{rid})
   }
   </delete>
   
   <update id="update" statementType="CALLABLE">
   {
	   CALL sp_reply_update(
	   			#{rid},
	   			#{qid},
	   			#{rcontent}
	   		)
   }
   </update>
   
</mapper>